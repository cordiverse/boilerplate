{
  "name": "@cordisjs/boilerplate",
  "version": "0.0.0",
  "packageManager": "yarn@4.1.0",
  "private": true,
  "files": [
    ".env",
    "cordis.yml"
  ],
  "license": "AGPL-3.0",
  "workspaces": [
    "external/*",
    "external/*/external/*",
    "external/*/external/*/packages/*",
    "external/*/packages/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yakumo build",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "dev": "cross-env NODE_ENV=development cordis start --import tsx --import yml-register",
    "start": "cordis start"
  },
  "devDependencies": {
    "@types/node": "^20.10.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.20",
    "tsx": "^4.7.1",
    "typescript": "^5.3.2",
    "yakumo": "^1.0.0-beta.6",
    "yakumo-esbuild": "^1.0.0-beta.3",
    "yakumo-tsc": "^1.0.0-beta.3",
    "yml-register": "^1.2.5"
  },
  "dependencies": {
    "@cordisjs/plugin-hmr": "^0.1.1",
    "cordis": "^3.10.4"
  }
}
